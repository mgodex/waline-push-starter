{
  "name": "waline-comment-system",
  "version": "1.0.0",
  "description": "Waline comment system for Tencent Cloud EdgeOne Pages",
  "main": "node-functions/index.js",
  "scripts": {
    "build": "echo 'No build step required'",
    "deploy": "echo 'Deploy to EdgeOne Pages'"
  },
  "edgeone": {
    "functions": {
      "node-functions/index.js": {
        "runtime": "nodejs18.x",
        "memory": 128,
        "timeout": 30
      }
    },
    "routes": [
      {
        "path": "/api/comment",
        "function": "node-functions/index.js"
      }
    ]
  }
}
